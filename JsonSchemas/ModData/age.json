{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Age",
    "description": "An age that the player can be in.",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the age.",
            "type": "string"
        },
        "id": {
            "description": "The ID of the age.",
            "type": "string"
        },
        "translation_key": {
            "description": "The translation key of the age.",
            "type": "string"
        },
        "after": {
            "description": "After which age this age is.",
            "type": "string",
            "pattern": "\\w+:\\w+"
        }
    },
    "required": [
        "name",
        "id",
        "translation_key"
    ]
}