{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Mod Data",
    "description": "The Mod Data.",
    "type": "object",
    "properties": {
        "ages": {
            "description": "The ages that the mod is adding.",
            "type": "array",
            "items": {
                "$ref": "./Skills/age.json"
            },
            "minItems": 1
        },
        "skill_categories": {
            "description": "The skill categories that the mod is adding.",
            "type": "array",
            "items": {
                "$ref": "./Skills/skill_category.json"
            },
            "minItems": 1
        },
        "skills": {
            "description": "The skills that the mod is adding.",
            "type": "array",
            "items": {
                "$ref": "./Skills/skill.json"
            },
            "minItems": 1
        },
        "namespace": {
            "description": "The namespace of the mod.",
            "type": "string"
        }
    },
    "required": [
        "namespace"
    ]
}