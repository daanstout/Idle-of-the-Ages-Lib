{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Skill",
    "description": "Data for adding a skill.",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the skill.",
            "type": "string"
        },
        "id": {
            "description": "The ID of the skill.",
            "type": "string"
        },
        "translation_key": {
            "description": "The translation key for translating the skill.",
            "type": "string"
        },
        "thumbnail": {
            "description": "The path to the thumbnail asset for the skill.",
            "type": "string"
        },
        "skill_category": {
            "description": "The skill category that the skill is in.",
            "type": "string",
            "pattern": "\\w+:\\w+"
        },
        "unlock_age": {
            "description": "The age after which the skill is unlocked.",
            "type": "string",
            "pattern": "\\w+:\\w+"
        }
    },
    "required": [
        "name",
        "id",
        "translation_key",
        "thumbnail",
        "skill_category"
    ]
}